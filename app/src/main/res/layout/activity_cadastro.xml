<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jonataswinston.outrotesteloginfire.CadastroActivity">

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <EditText
        android:id="@+id/CadastroNome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:background="@android:color/transparent"
        android:hint="Nome"
        android:textColorHint="#fff"
        android:maxLines="1"
        android:drawableLeft="@drawable/ic_lock_white_24dp"
        android:layout_marginTop="10dp"
        android:drawablePadding="12dp"
        android:padding="8dp" />
        <EditText
            android:id="@+id/CadastroEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:background="@android:color/transparent"
            android:hint="Email"
            android:textColorHint="#fff"
            android:maxLines="1"
            android:drawableLeft="@drawable/ic_lock_white_24dp"
            android:layout_marginTop="10dp"
            android:drawablePadding="12dp"
            android:padding="8dp" />
        <EditText
            android:id="@+id/CadastroSenha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:background="@android:color/transparent"
            android:hint="Senha"
            android:textColorHint="#fff"
            android:maxLines="1"
            android:drawableLeft="@drawable/ic_lock_white_24dp"
            android:layout_marginTop="10dp"
            android:drawablePadding="12dp"
            android:padding="8dp" />
        <EditText
            android:id="@+id/CadastroConfirmarSenha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:background="@android:color/transparent"
            android:hint="Confirme a senha"
            android:textColorHint="#fff"
            android:maxLines="1"
            android:drawableLeft="@drawable/ic_lock_white_24dp"
            android:layout_marginTop="10dp"
            android:drawablePadding="12dp"
            android:padding="8dp" />
        <Button
            android:id="@+id/CadastroConcButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cadastre-se"
            android:background="@drawable/background_signup"
            android:layout_marginTop="16dp"
            android:textColor="#fff"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:padding="16dp"
            android:clickable="true"
            style="@style/Base.TextAppearance.AppCompat.Body1"/>

    </android.support.v7.widget.LinearLayoutCompat>
</android.support.constraint.ConstraintLayout>
